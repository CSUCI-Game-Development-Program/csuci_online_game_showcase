---
layout: base.liquid  
title: Games
pagination: 
  data: games
  size: 1
  alias: game
permalink: "/games/{{ game.title | slugify }}-{{ game.developer | slugify }}.html"
---
<section class="landing" ;>
  <div class="section container">
    <h1>{{ game.title }}</h1>
    <div class="game-info">
      <iframe
        src="../browser_games/{{ game.filename }}.html"
        style="border:2px solid red;"
        height="600"
        width="600"
        title="{{ game.title }}"></iframe>
      <br>
      <span class="student-name">
        by {{ game.developer }}
      </span>
      <p>
        {{ game.description }}
        <br>
        Instructions:
        {{ game.instructions }}
      </p>
    </div>
    <div class="text-center">
      {% if pagination.href.previous %}
        <a class="gradient-btn" href="{{ pagination.href.previous }}">Prev</a>
      {% endif %}
      &nbsp;
      &nbsp;
      {% if pagination.href.next %}
        <a class="gradient-btn" href="{{ pagination.href.next }}">Next</a>
      {% endif %}
    </div>
  </div>
</section>