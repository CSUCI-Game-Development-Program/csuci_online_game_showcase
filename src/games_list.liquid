---
layout: base.liquid  
title: Games
pagination: 
  data: games
  size: 1
  alias: game
permalink: "/games/{{ game.title | slugify }}-{{ game.developer | slugify }}.html"
---
<section class="landing custom-drk">
  <div class="section container">
    <div class="iframe-container">
      <iframe
        src="../browser_games/{{ game.filename }}.html"
        title="{{ game.title }}"></iframe>
        </div>
      <br>
      <div class="name-and-author">
      <h1 class="game-name">{{ game.title }}</h1>
      <span class="student-name">
        by {{ game.developer }}
      </span>
      </div>
      {% if game.class == "COMP 337" %}
        <a href="https://catalog.csuci.edu/preview_course_nopop.php?catoid=53&coid=108855" target="_blank">COMP 337 Course Description</a>
      {% elsif game.class == "COMP 437" %}
        <a href="https://catalog.csuci.edu/preview_course_nopop.php?catoid=48&coid=97568" target="_blank">COMP 437 Course Description</a>
      {% endif %}
    
      <p class="description">
        {{ game.description }}
        <br>
        <br>
        Instructions:
        {{ game.instructions }}
        <br>
        <button class="btn-link-row">
          <a href="{{ game.link }}" download>Download</a>
        </button>
      </p>
    </div>
    <div class="text-center">
      {% if pagination.href.previous %}
        <a class="neon-button" href="{{ pagination.href.previous }}">Previous</a>
      {% endif %}
      {% if pagination.href.next %}
        <a class="neon-button" href="{{ pagination.href.next }}">Next</a>
      {% endif %}
    </div>
  </div>
</section>